@if (EmOptionsAccessor.Value.Account.HasOAuthLogin)
{
    <h6 class="text-center">@Titles.ContinueWith</h6>
    <div>
        <form action="@Url.ExternalLoginAction(ViewData)" method="post">
            @Html.AntiForgeryToken()
            <div class="row">
                @if (EmOptionsAccessor.Value.Account.HasFacebookLogin)
                {
                    <div class="col-sm-6 mb-2 mb-sm-0">
                        <button class="btn btn-facebook w-100" name="externalProvider" value="Facebook" type="submit">Facebook</button>
                    </div>
                }
                @if (EmOptionsAccessor.Value.Account.HasGoogleLogin)
                {
                    <div class="col-sm-6 btn-google-container">
                        <button class="btn btn-google w-100" name="externalProvider" value="Google" type="submit">Google</button>
                    </div>
                }
            </div>
        </form>
    </div>
}